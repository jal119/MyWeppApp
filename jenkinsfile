pipeline {
    agent {
        docker {
            image 'node:14-alpine'       
        }
    }
    
    stages {
        stage('Test') {
            steps {
                sh 'npm install'
                sh 'npm test'
            }
        }
        
        stage('Build') {
            agent {
                docker {
                    image 'maven:3.6-jdk-11'
                    label 'docker'
                }
            }
            steps {
                sh 'mvn clean install'
            }
        }
    }
}

